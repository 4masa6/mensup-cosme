<!DOCTYPE html>
<html>
  <head>
    <title>MensupCosme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6">
        <%= link_to image_tag("icon.jpg", class:"furima-icon",:size =>'50x50'), "/" ,:size =>'320x480' %>
        <a href="/">Men's up Cosme</a>
        </h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <span><%= current_user.nickname %>
              <ul class="user__info">
                <li>
                  <%= link_to 'マイページ', "#", class: "user-nickname" %>
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
                </li>
              </ul>
            </span>
            <%= link_to "投稿する", "#", class: "post" %>
        <% else %>
          <div class="grid-6">
            <%= link_to 'ログイン', user_session_path, class: "post" %>
            <%= link_to '新規登録', new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright Men's up Cosme 2020.
      </p>
    </footer>
  </body>
</html>
